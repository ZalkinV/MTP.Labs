kernel void matrixMul(
	global const float* matrixA,
	global const float* matrixB,
	int colsRowsCount,
	int colsCount,
	global float* matrixResult)
{
	int iRow = get_global_id(0);
	int iCol = get_global_id(1);

	float elValue = 0;
	for (int iEl = 0; iEl < colsRowsCount; iEl++)
	{
		elValue += matrixA[iRow * colsRowsCount + iEl] * matrixB[iEl * colsCount + iCol];
	}

	matrixResult[iRow * colsCount + iCol] = elValue;
}